FROM ubuntu:20.04

COPY --from=composer:2.2.5 /usr/bin/composer /usr/local/bin/composer

ENV COMPOSER_HOME=/composer
ENV COMPOSER_GLOBAL_AUTOLOAD_FILE_NAME=${COMPOSER_HOME}/vendor/autoload.php
ENV COMPSER_BIN_PATH=/usr/local/bin/composer

COPY docker/ci/global.composer.json ${COMPOSER_HOME}/composer.json

# To use phpstan with differents PHP versions, like php7.4 "${PHPSTAN_BIN_PATH}" ...
ENV PHPSTAN_BIN_PATH=/usr/local/bin/phpstan

RUN \
    apt-get update \
    && apt-get upgrade -y \
    # To add add-apt-repository
    && apt-get install -y software-properties-common \
    && LC_ALL=C.UTF-8 add-apt-repository ppa:ondrej/php \
    && apt-get install -y \
        bash \
        shellcheck \
        php7.4-cli \
        php7.4-xml \
        php7.4-mbstring \
        php8.0-cli \
        php8.0-xml \
        php8.0-mbstring \
        php8.1-cli \
        php8.1-xml \
        php8.1-mbstring \
        # For coverage
        php8.1-xdebug \
        # For Composer
        curl zip php7.4-curl php7.4-zip \

    # For php scripts in bin
    && php7.4 ${COMPSER_BIN_PATH} global require \
        steevanb/php-parallel-processes:0.2.* \
        symfony/console:5.4.* \

    # Install CI tools
    && php7.4 ${COMPSER_BIN_PATH} global require \
        maglnet/composer-require-checker:3.8.* \
        wapmorgan/php-deprecation-detector:2.0.* \
        steevanb/php-code-sniffs:4.3.* \
        phpstan/phpstan:1.4.* \
        phpstan/phpstan-deprecation-rules:1.0.* \
        phpstan/phpstan-strict-rules:1.1.* \
        phpstan/phpstan-phpunit:1.0.* \
        spaze/phpstan-disallowed-calls:2.2.* \
        ergebnis/phpstan-rules:1.0.* \
        insolita/unused-scanner:2.4.* \
        ergebnis/composer-normalize:2.23.* \
        infection/infection:0.26.* \
    && ln -s ${COMPOSER_HOME}/vendor/bin/composer-require-checker /usr/local/bin/composer-require-checker \
    && ln -s ${COMPOSER_HOME}/vendor/bin/phpdd /usr/local/bin/phpdd \
    && ln -s ${COMPOSER_HOME}/vendor/bin/phpcs /usr/local/bin/phpcs \
    && ln -s ${COMPOSER_HOME}/vendor/bin/phpstan /usr/local/bin/phpstan \
    && ln -s ${COMPOSER_HOME}/vendor/bin/unused_scanner /usr/local/bin/unused-scanner \
    && ln -s ${COMPOSER_HOME}/vendor/bin/infection /usr/local/bin/infection \

    # This file is generated by infection/extension-installer
    # https://github.com/infection/extension-installer/issues/4
    && chmod 777 /composer/vendor/infection/extension-installer/src/GeneratedExtensionsConfig.php \

    # Purge
    && apt-get purge -y software-properties-common \
    && apt-get autoremove -y \
    && apt-get clean \
    && apt-get autoclean \
    && rm -rf /tmp/*

WORKDIR /app
